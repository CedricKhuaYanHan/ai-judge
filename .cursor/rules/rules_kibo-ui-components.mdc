## Usage Examples

### Basic Component Usage

```typescript
import { Calendar } from "~/components/kibo-ui/calendar";
import { Kanban } from "~/components/kibo-ui/kanban";

function Dashboard() {
  return (
    <div className="grid grid-cols-2 gap-4">
      <Calendar />
      <Kanban />
    </div>
  );
}
```

### Gantt Chart Implementation

```typescript
import {
  GanttProvider,
  GanttSidebar,
  GanttSidebarGroup,
  GanttSidebarItem,
  GanttTimeline,
  GanttHeader,
  GanttFeatureList,
  GanttFeatureListGroup,
  GanttFeatureRow,
  GanttToday,
  GanttCreateMarkerTrigger,
} from "~/components/kibo-ui/gantt";
import type { GanttFeature, GanttStatus } from "~/components/kibo-ui/gantt";

function ProjectTimeline({ features }: { features: GanttFeature[] }) {
  return (
    <GanttProvider range="monthly" zoom={100} className="h-screen">
      <GanttSidebar>
        <GanttSidebarGroup name="Project Tasks">
          {features.map((feature) => (
            <GanttSidebarItem
              key={feature.id}
              feature={feature}
              onSelectItem={(id) => console.log("Selected:", id)}
            />
          ))}
        </GanttSidebarGroup>
      </GanttSidebar>

      <GanttTimeline>
        <GanttHeader />
        <GanttFeatureList>
          <GanttFeatureListGroup>
            <GanttFeatureRow
              features={features}
              onMove={(id, startAt, endAt) => {
                console.log("Moved feature:", id, startAt, endAt);
              }}
            />
          </GanttFeatureListGroup>
        </GanttFeatureList>
        <GanttToday />
        <GanttCreateMarkerTrigger
          onCreateMarker={(date) => console.log("Create marker at:", date)}
        />
      </GanttTimeline>
    </GanttProvider>
  );
}
```

